{    "preset": "laravel",    "rules": {        "array_syntax": {            "syntax": "short"        },        "binary_operator_spaces": {            "default": "align_single_space_minimal"        },        "braces": {            "allow_single_line_closure": true        },        "cast_spaces": {            "space": "single"        },        "class_definition": {            "single_line": true        },        "concat_space": {            "spacing": "one"        },        "function_declaration": {            "closure_function_spacing": "none"        },        "method_argument_space": {            "on_multiline": "ensure_fully_multiline"        },        "phpdoc_order": true,        "single_trait_insert_per_statement": true,        "simplified_null_return": true,        "single_quote": true,        "no_empty_statement": true,        "ordered_imports": {            "sort_algorithm": "alpha"        },        "no_unused_imports": true,        "trailing_comma_in_multiline": {            "elements": [                "arrays"            ]        },        "array_indentation": true,        "new_with_parentheses": {            "anonymous_class": true,            "named_class": true        },        "class_attributes_separation": {            "elements": {                "method": "one",                "property": "one"            }        },        "self_accessor": true,        "no_null_property_initialization": true,        "phpdoc_align": true,        "phpdoc_summary": false,        "phpdoc_no_empty_return": false,        "trim_array_spaces": true,        "no_whitespace_in_blank_line": true,        "no_extra_blank_lines": {            "tokens": [                "extra",                "use",                "use_trait",                "return",                "throw",                "break",                "continue",                "curly_brace_block"            ]        }    },    "exclude": [        "storage",        "vendor",        "bootstrap/cache",        "node_modules"    ]}